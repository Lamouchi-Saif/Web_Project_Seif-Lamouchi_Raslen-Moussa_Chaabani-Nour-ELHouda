{% extends 'base.html.twig' %}
{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/login.css') }}" />
{% endblock %}


{% block title %}Login & Register - RT Pizza{% endblock %}

{% block body %}
  <div class="container">
    <div class="header">
      <span class="pizza-icon" aria-hidden="true">üçï</span>
      <h1>RT Pizza</h1>
      <p>Login or Register to order your favorite pizza!</p>
    </div>

    <nav class="form-toggle">
      <button id="login-tab" class="active">Login</button>
      <button id="register-tab">Register</button>
    </nav>

    {% if error is defined and error %}
      <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% for type, messages in app.flashes %}
      {% for message in messages %}
        <div class="alert alert-{{ type }}">{{ message }}</div>
      {% endfor %}
    {% endfor %}

    {# Login Form (handled by Symfony Security) #}
    <form id="login-form" class="active" method="POST" action={{ path('login')}}>
      <input type="hidden" name="_csrf_token" value="">

      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        placeholder="Enter your email"
        value="{{ last_email|default('') }}"
      >

      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        placeholder="Enter your password"
      >

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

      <button type="submit" class="submit-btn">Login</button>

    </form>

    {# Register Form #}
    <form id="register-form" method="POST" action={{ path('register') }}>
        <label for="username">Username</label>
          <input
            type="text"
            id="username"
            name="username"
            required
            placeholder="Enter your username"
            value="{{ last_email|default('') }}"
          >

        <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="Enter your email"
            value="{{ last_email|default('') }}"
          >

          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            placeholder="Enter your password"
          >

      <button type="submit" class="submit-btn">Register</button>
    </form>

    <p class="footer-text">Made with ‚ù§Ô∏è for pizza lovers</p>
  </div>

  <script>
    const loginTab = document.getElementById("login-tab");
    const registerTab = document.getElementById("register-tab");
    const loginForm = document.getElementById("login-form");
    const registerForm = document.getElementById("register-form");

    loginTab.addEventListener("click", () => {
      loginTab.classList.add("active");
      registerTab.classList.remove("active");
      loginForm.classList.add("active");
      registerForm.classList.remove("active");
    });

    registerTab.addEventListener("click", () => {
      registerTab.classList.add("active");
      loginTab.classList.remove("active");
      registerForm.classList.add("active");
      loginForm.classList.remove("active");
    });
  </script>
{% endblock %}
