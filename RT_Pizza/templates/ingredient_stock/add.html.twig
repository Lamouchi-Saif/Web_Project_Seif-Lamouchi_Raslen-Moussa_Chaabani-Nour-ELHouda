{# templates/ingredient_stock/add.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Add New Ingredient{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/add_ing.css') }}" />
{% endblock %}

{% block body %}
<div class="form-container">
    <h1>Add New Ingredient</h1>
    
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.type) }}
            {{ form_widget(form.type) }}
            {{ form_errors(form.type) }}
        </div>
        
        <h3>Stock Information</h3>
        
        <div class="form-group">
            {{ form_label(form.quantity) }}
            {{ form_widget(form.quantity) }}
            {{ form_errors(form.quantity) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.unit) }}
            {{ form_widget(form.unit) }}
            {{ form_errors(form.unit) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.price) }}
            {{ form_widget(form.price) }}
            {{ form_errors(form.price) }}
        </div>
        
        <button type="submit" class="btn-submit">Add Ingredient</button>
        <a href="{{ path('ingredient_stock') }}" class="btn-cancel" style="margin-left: 10px;">Cancel</a>
    {{ form_end(form) }}
</div>
{% endblock %}