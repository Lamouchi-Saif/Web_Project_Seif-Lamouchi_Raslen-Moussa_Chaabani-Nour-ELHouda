{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/edit.css') }}" />
{% endblock %}

{% block body %}
<div class="edit-container">
    <h1 class="edit-title">✏️ Edit Product</h1>

    {% if product.imageUrl %}
        <div class="current-image">
            <img src="/{{ product.imageUrl }}" alt="{{ product.name }} current image">
        </div>
    {% endif %}

    {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>

        <div class="form-group">
            {{ form_label(form.price) }}
            {{ form_widget(form.price) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
        </div>

        <div class="form-group">
            {{ form_label(form.ingredients, 'Ingredients (optional)') }}
            {{ form_widget(form.ingredients, { 'attr': {'placeholder': 'e.g. Cheese, Tomato, Basil'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.imageFile, 'Upload New Image') }}
            {{ form_widget(form.imageFile) }}
        </div>

        <button class="update-btn" type="submit">✅ Update</button>

    {{ form_end(form) }}
</div>
{% endblock %}
