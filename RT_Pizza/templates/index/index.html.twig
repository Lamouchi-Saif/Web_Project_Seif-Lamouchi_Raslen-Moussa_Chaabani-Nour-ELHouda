{% extends 'base.html.twig' %}

{% block title %}Welcome to Pizza Delight{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
{% endblock %}

{% block body %}
<div class="hero-section">
    <div class="overlay">
        <div class="hero-content">
            <h1 class="hero-title">Savor Every Slice</h1>
            <p class="hero-subtitle">Freshly baked pizzas made with love and fire</p>
            
            {% for type, messages in app.flashes %}
              {% for message in messages %}
                <div class="alert alert-{{ type }}">{{ message }}</div>
              {% endfor %}
            {% endfor %}

            <a href="{{ path('menu') }}" class="cta-button">Order Now</a>
            
        </div>
    </div>
</div>
{% endblock %}

