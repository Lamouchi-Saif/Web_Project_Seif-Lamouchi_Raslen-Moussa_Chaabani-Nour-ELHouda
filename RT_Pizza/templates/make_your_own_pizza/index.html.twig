{% extends 'base.html.twig' %}

{% block title %}Hello MakeYourOwnPizzaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="pizza-builder">
    <div class="ingredients-list">
        <h2>Choose Your Ingredients</h2>
        <ul>
            {% for ingredient in ingredients %}
                <li>
                    <label>
                        <input type="checkbox" name="ingredients[]" value="{{ ingredient.id }}">
                        {{ ingredient.name }} ({{ ingredient.price }}€)
                    </label>
                </li>
            {% endfor %}
        </ul>
    </div>

    <div class="pizza-preview">
        <h2>Your Pizza</h2>
        <div class="pizza-image">
            <!-- You can use JS to show added ingredients on pizza -->
        </div>
        <div class="summary">
            <p><strong>Total:</strong> <span id="pizza-total">0.00€</span></p>
            <button class="add-to-cart-btn">Add to Cart</button>
        </div>
    </div>
</div>
{% endblock %}
